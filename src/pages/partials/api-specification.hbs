{{#if isGraphQLTryout}}
<head>
  <link rel="stylesheet" href="https://unpkg.com/graphiql@3/graphiql.min.css">
  <link rel="stylesheet" href="/libs/graphql-schema-viewer/vendor/graphiql-explorer/dist/style.css">
  <style>
    .graphql-tryout-container {
      display: flex;
      flex-direction: column;
      gap: 16px;
      height: 100vh;
      font-family: 'Montserrat', sans-serif;
    }

    .graphql-controls {
      display: flex;
      flex-wrap: wrap;
      gap: 16px;
      padding: 16px;
      border: 1px solid #d0d7de;
      border-radius: 12px;
      background: #f6f8fa;
    }

    .graphql-control {
      flex: 1 1 320px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .graphql-control label {
      font-size: 12px;
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      color: #57606a;
    }

    .graphql-control input {
      border: 1px solid #d0d7de;
      border-radius: 8px;
      padding: 8px 12px;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      font-size: 13px;
      color: #1f2328;
      background: #fff;
    }

    .graphql-control .control-hint {
      font-size: 12px;
      color: #57606a;
    }

    .graphql-control .control-hint strong {
      color: #1f2328;
    }

    .graphiql-container .graphiql-editor-tools {
